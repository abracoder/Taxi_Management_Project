<%-include("partials/header") %>
    <i class="fas fa-trash"></i>
    <form action="/driver" method="POST">
        <div class="form-group">
            <label for="exampleInputEmail1">Full Name</label>
            <input type="text" name="fname" class="form-control" id="drivername">
        </div>
        <div class="form-group">
            <label for="phoneno">PhoneNo</label>
            <input type="number" name="phoneno" class="form-control" id="driverphoneno">
        </div>
        <div class="form-group">
            <label for="addressdriver">Address</label>
            <input type="text" name="address" class="form-control" id="driveraddress">
        </div>
        <button type="submit" class="btn btn-primary">Insert</button>

    </form>
    <table id="table" class="center">
        <thead>
            <tr>
                <th>Id</th>
                <th>Driver Name</th>
                <th>Phone no</th>
                <th>Address</th>
            </tr>
        </thead>
        <tbody>
            <% result.forEach(function (user){ %>
                <form action="/delete" method="POST">
                    <div class="item">

                        <tr>

                            <td>
                                <%= user.id %>
                            </td>
                            <td>
                                <%= user.d_name %>
                            </td>
                            <td>
                                <%= user.phone %>
                            </td>
                            <td>
                                <%= user.address %>
                            </td>
                            <td>
                                <a class="btn btn-success edit" href="./editdriver/<%= user.id %>">Edit</a>
                            </td>
                            <td>
                                <label>
                                <input type="checkbox" name="checkbox" value="<%= user.id %>" onChange="this.form.submit()">
                               <!-- <img src="../public/images/delete.png" width="50px" height="50px"/> -->Delete
                            </label>

                            </td>
                        </tr>
                    </div>
                    <input type="hidden" name="listName" value="<%= user.id %>"></input>
                </form>
                <%  }) %>
        </tbody>
    </table>
    </body>

    </html>